<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TarotPages</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TarotPages.styles.css" asp-append-version="true" />
</head>

<body>
    <style>
        body {
            header: black
        }

        body {
            background-color: black;
        }

        h1,
        h2,
        p {
            color: white;

        }
        .nav-link:hover {
        color: burlywood !important;
        }

        .container a:hover {
        color: burlywood !important;
        }

        .div
        {
            color: burlywood !important;
        }

    </style>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark" style="background-color: black;">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">TarotPages</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">2
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Readings" style="color: white;">Readings</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Privacy" style="color: white;">Privacy</a>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted" style="background-color: black;">
        <div class="container">
            <span style="color: grey;">&copy; 2023 - TarotPages -</span> <a asp-area="" asp-page="/Privacy" >Privacy</a>
        </div>

    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>